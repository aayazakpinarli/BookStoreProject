@using APP.Models
@model BookResponse

@{
    ViewBag.Title = "Delete Book";
}

<h1>@ViewBag.Title</h1>

<h3>Are you sure you want to delete this book?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Book Name</dt>
        <dd class="col-sm-10">@Model.BookName</dd>

        <dt class="col-sm-2">Authors</dt>
        <dd class="col-sm-10">
            @foreach(var author in Model.Authors)
            {
                @author <br />
            }
        </dd>

        <dt class="col-sm-2">Genres</dt>
        <dd class="col-sm-10">
            @foreach(var genre in Model.BookGenres)
            {
                @genre <br />
            }
        </dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.PriceF</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
