@using APP.Models
@model IEnumerable<BookResponse>

@{
    ViewBag.Title = "Books List";
}

<h1>@ViewBag.Title</h1>

<p class="text-success">
    @ViewBag.Count
</p>

@if (TempData["Message"] is not null)
{
    <p class="bg-warning text-black">
        @TempData["Message"]
    </p>
}

@if (User.IsInRole("Admin"))
{

<div class="row mb-3">
    <div class="col-10 text-success">
        @Model.Count() record(s) found.
    </div>
    <div class="col-2 text-end">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Book</a>
    </p>
    </div>
</div>
}
<div style="height:575px;overflow-y:auto;">
    <table class="table table-striped table-hover">
        <thead class="table-secondary">

            <tr>
                <th>@Html.DisplayNameFor(model => model.First().BookName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Authors)</th>
                <th>@Html.DisplayNameFor(model => model.First().BookGenres)</th>
                <th>@Html.DisplayNameFor(model => model.First().PriceF)</th>
                <th>@Html.DisplayNameFor(model => model.First().StockAmountF)</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.BookName)</td>
                <td>
                    @foreach(var author in item.Authors)
                    {
                        @author<br />
                    }
                </td>
                <td>
                    @foreach(var genre in item.BookGenres)
                    {
                        @genre<br />
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.PriceF)</td>
                <td>@Html.DisplayFor(modelItem => item.StockAmountF)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> 
                    @if (User.IsInRole("Admin"))
                    {  
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    }
                
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<hr />