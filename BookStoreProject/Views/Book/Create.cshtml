@using APP.Models
@model BookRequest

@{
    ViewBag.Title = "Create New Book";
}

<h1>@ViewBag.Title</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="BookName"></label>
        <input asp-for="BookName" class="form-control" />
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfPages"></label>
        <input asp-for="NumberOfPages" class="form-control" />
        <span asp-validation-for="NumberOfPages" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PublishedOn"></label>
        <input asp-for="PublishedOn" type="date" class="form-control" />
        <span asp-validation-for="PublishedOn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookPrice"></label>
        <input asp-for="BookPrice" class="form-control" />
        <span asp-validation-for="BookPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StockAmount"></label>
        <input asp-for="StockAmount" class="form-control" />
        <span asp-validation-for="StockAmount" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsTopSeller" type="checkbox" class="form-check-input" />
        <label asp-for="IsTopSeller" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label>Authors</label>
        <select asp-for="AuthorIds" asp-items="ViewBag.AuthorIds" class="form-control" multiple="multiple"></select>
    </div>

    <div class="form-group">
        <label>Genres</label>
        <select asp-for="GenreIds" asp-items="ViewBag.GenreIds" class="form-control" multiple="multiple"></select>
    </div>

    <div class="form-group">
        <label>Book Image</label>
        <input type="file" asp-for="ImageFile" class="form-control-file" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
