@using APP.Models
@model IEnumerable<CountryResponse>

@{
    var containerDivClass = "container";
    ViewData["Title"] = "Country List";
}

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

@if (Model is not null)
{
    <form asp-action="Index" autocomplete="off">
        <div class="@containerDivClass">
            <div class="row">
                <div class="col-12 text-danger">
                    @TempData["Message"]
                </div>
            </div>
            @if (User.IsInRole("Admin"))
            {

            <div class="row mb-3">
                <div class="col-10 text-success">
                    @Model.Count() record(s) found.
                </div>
                <div class="col-2 text-end">
                <p>
                    <a asp-action="Create"  class="btn btn-primary">Create New Country</a>
                </p>
                </div>
            </div>
            }
            <div style="height:575px;overflow-y:auto;">
                <table class="table table-striped table-hover">
                    <thead class="table-secondary">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CountryName)</th>
                            <th>@Html.DisplayNameFor(model => model.Cities)</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.CountryName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cities.Count) cities</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                                    @if (User.IsInRole("Admin"))
                                    {  
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
}
