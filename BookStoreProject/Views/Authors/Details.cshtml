@using APP.Models
@model AuthorResponse


@{
    ViewData["Title"] = "Author Details";
}

<h1>@ViewBag.Title</h1>

@if (Model is null)
{
    <p class="text-danger">Author not found!</p>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th>@Html.DisplayNameFor(authorResponse => authorResponse.FirstName)</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(authorResponse => authorResponse.LastName)</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(authorResponse => authorResponse.BookCount)</th>
            <td>@Model.BookCount</td>
        </tr>
    </table>

    @if(User.Identity.IsAuthenticated)
    {
        <a asp-action="Add" asp-controller="Cart" asp-route-BookId ="@Model.Id">Add to Cart</a>
    }
    @if (User.IsInRole("Admin"))
    {  
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}
