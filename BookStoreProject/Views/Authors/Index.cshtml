@using APP.Models
@model IEnumerable<AuthorResponse>

@{
    ViewBag.Title = "Authors List";
}

<h1>@ViewBag.Title</h1>

<p class="text-success">
    @ViewBag.Count
</p>

@* check whether it is null or not. *@
@if (TempData["Message"] is not null)
{
    <p class="bg-warning text-black">
        @TempData["Message"]
    </p>
}

@if (User.IsInRole("Admin"))
{

<div class="row mb-3">
    <div class="col-10 text-success">
        @Model.Count() record(s) found.
    </div>
    <div class="col-2 text-end">
    <p>
        <a asp-action="Create">Create New Author</a>
    </p>
    </div>
</div>
}

<div style="height:575px;overflow-y:auto;">
    <table class="table table-striped table-hover">
        <thead class="table-secondary">
            <tr>
                <th>        
                    @Html.DisplayNameFor(authorResponse => authorResponse.FirstName)
                </th>
                <th>        
                    @Html.DisplayNameFor(authorResponse => authorResponse.LastName)
                </th>
                <th>        
                    @Html.DisplayNameFor(authorResponse => authorResponse.BookCount)
                </th>
                <th>
                    @Html.DisplayNameFor(authorResponse => authorResponse.Books)
                </th>
                <th>
                    Operations
                </th>
            </tr>
            </thead>
            <tbody>
                @foreach (AuthorResponse item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(authorResponse => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(authorResponse => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(authorResponse => item.BookCount)
                        </td>
                        <td>
                            <ul>
                                @foreach(var book in item.Books)
                                {
                                    <li>@book</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Author Details</a>
                            @if (User.IsInRole("Admin"))
                            {  
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a> 
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
<hr />


