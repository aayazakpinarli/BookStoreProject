@using APP.Models
@model IEnumerable<CityResponse>

@{
    var containerDivClass = "container";
    ViewData["Title"] = "City List";
}

<div class="@containerDivClass">
    <h1>@ViewData["Title"]</h1>
    <hr />
</div>

@if (Model is not null)
{
    <div class="@containerDivClass">
        <div class="row">
            <div class="col-12 text-danger">
                @TempData["Message"]
            </div>
        </div>
        @if (User.IsInRole("Admin"))
        {

        <div class="row mb-3">
            <div class="col-10 text-success">
                @Model.Count() record(s) found.
            </div>
            <div class="col-2 text-end">
            <p>
                <a asp-action="Create"  class="btn btn-primary">Create New City</a>
            </p>
            </div>
        </div>
        }
        <table class="table table-striped table-hover">
            <thead class="table-secondary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().CityName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Country.CountryName)</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.CityName)</td>
                        <td>@Html.DisplayFor(m => item.Country.CountryName)</td>


                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>
                            @if (User.IsInRole("Admin"))
                            {  
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
